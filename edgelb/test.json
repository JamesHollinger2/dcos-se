{
    "apiVersion": "V2",
    "name": "sample-minimal",
    "count": 2,
    "haproxy": {
        "stats": {
            "bindPort": 15001
        },
        "frontends": [{
            "bindPort": 80,
            "protocol": "HTTP",
            "linkBackend": {
                "defaultBackend": "ping-backend"
            }
        }],
        "backends": [{
            "name": "ping-backend",
            "protocol": "HTTP",
            "services": [{
                "marathon": {
                    "serviceID": "/ping"
                },
                "endpoint": {
                    "portName": "pong"
                }
            }]
        }]
    }
}
